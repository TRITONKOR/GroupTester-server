<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.tritonkor.presentation.controller.user.SignUpController"
            prefHeight="400.0" prefWidth="600.0" alignment="CENTER">
  <Label text="Реєстрація користувача" styleClass="title-1" />
  <VBox spacing="10.0" alignment="CENTER" prefWidth="500.0" prefHeight="400.0">
    <HBox alignment="CENTER">
      <Label text="Username:" />
      <TextField fx:id="usernameField" />
    </HBox>
    <HBox spacing="10.0" alignment="CENTER">
      <Label text="Email:" />
      <TextField fx:id="emailField" />
    </HBox>
    <HBox spacing="10.0" alignment="CENTER">
      <Label text="Password:" />
      <PasswordField fx:id="passwordField" />
    </HBox>
    <HBox spacing="10.0" alignment="CENTER">
      <Label text="Photo:" />
      <ImageView fx:id="photoImageView" fitWidth="100" fitHeight="100" />
      <Button text="Upload Photo" onAction="#onUploadPhoto" />
    </HBox>
    <HBox spacing="10.0" alignment="CENTER">
      <Label text="Birthday:" />
      <DatePicker fx:id="birthdayPicker" />
    </HBox>
    <HBox spacing="10.0" alignment="CENTER">
      <Label text="Role:" />
      <ComboBox fx:id="roleComboBox" />
    </HBox>
    <HBox spacing="10.0" alignment="CENTER">
      <Button text="Реєстрація" onAction="#onSave" />
    </HBox>
  </VBox>
</VBox>
